mixin base(title)
	head
		title=title
		meta(charset="utf-8")
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
		link(rel="shortcut icon", type="image/png", href="/pillars/docs/img/favicon-pillarsjs.png")
		link(rel='stylesheet', type='text/css', href='/pillars/css/normalize.css')
		link(rel='stylesheet', type='text/css', href='/pillars/css/pillars.css')
		link(rel='stylesheet', type='text/css', href='/pillars/css/pillarsDocs.css')
		//link(rel='stylesheet', type='text/css', href='/pillars/docs/css/style.css')
		link(rel="stylesheet", type='text/css', href="/pillars/docs/js/highlight/styles/monokai.css")

	body
		#space
			header#header
				a#logo Pillars.js - make it easy!
				nav#mainmenu
					h2 Main menu
					.select
						select
							option(value="#") Welcome
							option(value="#") Reference
							option(value="#") Tutorials
							option(value="#") Contact

					ul
						li: a(href="#") Welcome
						li: a(href="#") Reference
						li: a(href="#") Tutorials
						li: a(href="#") Contact

				nav#social
					h2 Social links
					ul
						li: a.github(href="#") Github
						li: a.twitter(href="#") Twitter
						li: a.gplus(href="#") Google+

			#main
				block

			footer#footer
				.logo Pillars.js - make it easy!
				.legal
					.phrase Pillars.js is a modular and scalable framework for web development in Node.js
					.copyright ©2014 Javier Gallego Martín & individual contributors
					.license MIT license




		link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,400italic,600,600italic,700,700italic')
		link(rel="stylesheet", type='text/css', href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css")
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
		script(src="/pillars/docs/js/highlight/highlight.pack.js")
		script.
			$(document).ready(function() {
				$('.codeblock').each(function(i, block) {
					hljs.highlightBlock(block);
				});
			});


mixin layout(title)
	+base(title)
		#contents
			block

mixin reference-layout(title)
	+base(title)
		#sidebar

			nav
				h2 Table of contents
				ul
					li: a(href="pillars-library.jade") Framework Pillars.js
					li: a(href="class-app.jade") Clase App
					li: a(href="class-pillar.jade") Clase Pillar
					li: a(href="class-beam.jade") Clase Beam
					li
						a(href="reference/class-app.jade") Clase App
						ul
							li: a(href="") Menu item
							li: a(href="#") Menu item
							li: a(href="#") Menu item
					li: a(href="#") Menu item
					li: a(href="#") Menu item

			nav
				h2 Reference index
				ul
					li: a(href="#") Menu item
					li: a(href="#") Menu item
					li
						a(href="#") Menu item
						ul
							li: a(href="#") Menu item
							li: a(href="#") Menu item
							li: a(href="#") Menu item
					li: a(href="#") Menu item
					li: a(href="#") Menu item

		#contents
			block